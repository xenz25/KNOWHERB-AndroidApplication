<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GinamitSaAppFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/arimo_bold"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="@dimen/back_button_width"
            android:text="Mga API na ginamit para sa ilang gawain ng aplikasyon."
            android:textColor="#566A4C"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:gravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="@dimen/back_button_width"
            android:text="GIF Drawable API"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/description_container"
            android:elevation="10dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/link_gif_drawable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/segoe_regular"
                android:text="@string/api_gif_drawable"
                android:textColor="@color/white"
                android:textSize="@dimen/description_text_size" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:gravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="@dimen/back_button_width"
            android:text="Android Views Animation API"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/description_container"
            android:elevation="10dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/link_android_view_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_regular"
                android:text="@string/api_android_view_anim"
                android:textColor="@color/white"
                android:textSize="@dimen/description_text_size" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:gravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="@dimen/back_button_width"
            android:text="Google GSON"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/description_container"
            android:elevation="10dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/link_gson"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_regular"
                android:text="@string/api_gson"
                android:textColor="@color/white"
                android:textSize="@dimen/description_text_size" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:gravity="start"
            android:paddingStart="30dp"
            android:paddingEnd="@dimen/back_button_width"
            android:text="Glide"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/description_container"
            android:elevation="10dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/link_glide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_regular"
                android:text="@string/api_glide"
                android:textColor="@color/white"
                android:textSize="@dimen/description_text_size"
                android:transitionName="@string/sakit_at_lunas_description_tn" />
        </FrameLayout>
    </LinearLayout>


</RelativeLayout>