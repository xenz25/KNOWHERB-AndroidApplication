<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickable_panel"
    android:background="@drawable/white_back_ground_button"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:id="@+id/content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/btn_remove_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/arimo_bold"
            android:textColor="@color/primaryDarkColor"
            android:textSize="15sp"
            tools:text="Alipunga" />

        <TextView
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/segoe_regular"
            android:textColor="@color/instruction_header_color"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:transitionName="@string/sakit_at_lunas_description_tn"
            tools:text="Ang hika ay karamdaman ng tubong daanan ng hininga. Ang mga palatandaan nito..." />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/btn_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="@android:color/darker_gray"
        android:clickable="true"
        android:focusable="true" />



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/content_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.4"
        android:background="@android:color/darker_gray" />

</RelativeLayout>