<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/common_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/arimo_bold"
        android:textColor="@color/instruction_header_color"
        android:textSize="15sp"
        tools:text="@string/scientific_name" />

    <TextView
        android:layout_marginEnd="10dp"
        android:id="@+id/common_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/common_name_title"
        android:fontFamily="@font/arimo_italic"
        android:textSize="15sp"
        tools:text="Persea Americana Mil" />

</RelativeLayout>